.admin_body.full_window
  .row
    .nav-container.span3
      !=render :partial => 'admin/menu_sidebar'
    .container.span7
      %table.table.table-hover
        %caption="Пользователи "
        %thead
          %tr
            %th="Идентификатор"
            %th="Имя"
            %th="Баллы"
            %th="Редактирование"
        - if @users && @users.any?
          - @users.each do |user|
            %tr
              %td=user[:n_vk_id]
              %td="#{user[:vc_first_name]} #{user[:vc_last_name]}"
              %td=user[:n_total_score] || 0
              %td
                %a{href: "/admin/users/#{user[:n_user_id]}/edit"}="Редактировать"
        - else
          %tr
            %td.center-text{colspan: 2}="Нет пользователей"